<div class="user-info">
  <%= image_tag "#{@user.profile_pic}", size: "230x230", class: "avatar" %>
  <h1><%= @user.name %></h1>
  <h3><%= @user.username %></h3>

  <h1>Repositories (<%= @user.repo_count(@user) %>)</h1>
  <% @user.repos(@user).each do |repo| %>
  <li><%= repo %></li>
  <% end %>

  <h1>Followers (<%= @user.follower_count(@user) %>)</h1>
  <% @user.followers(@user).each do |follower| %>
  <li><%= follower %></li>
  <% end %>

  <h1>Following (<%= @user.following_count(@user) %>)</h1>
  <% @user.following(@user).each do |following| %>
  <li><%= following %></li>
  <% end %>

  <h1>Starred Repositories (<%= @user.starred_repo_count(@user) %>)</h1>
  <% @user.starred_repos(@user).each do |repo| %>
  <li><%= repo %></li>
  <% end %>

  <h1>Organizations (<%= @user.org_count(@user) %>)</h1>
  <% @user.orgs(@user).each do |org| %>
  <li><%= org %></li>
  <% end %>

  <h1>Events</h1>
  <% @user.event_type(@user).each do |event| %>
    <div class="row">
      <div class="row">
        <div class="col-md-4">
          <%= link_to "#{event.repo.name}", "https://github.com/#{event.repo.name}"%>
        </div>
        <div class="col-md-8">
          <%= event.type %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= Date.parse(event.created_at).strftime('%m-%d-%Y') %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <% if event.type == "PushEvent" %>
            <% event.payload.commits.each do |commit| %>
              <div class="row">
                <%= commit.message %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <hr>
    </div>
  <% end %>
</div>
